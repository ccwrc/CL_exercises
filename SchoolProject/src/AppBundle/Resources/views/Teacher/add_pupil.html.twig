{% extends "::base.html.twig" %}

{% block title %} dodaj ucznia do nauczyciela{% endblock %}

{% block body %}
    <h1>Dodaj ucznia do nauczyciela</h1>

    <form action="{{ path("app_teacher_relationteacherpupil") }}" method="POST">
        Nauczyciel:
        <select name="teacher_id">
            {% for teacher in teachers %}
                <option value="{{ teacher.id }}">
                    {{ teacher.name }}
                </option>
            {% endfor %}
        </select> <br/>
        Uczeń:
        <select name="pupil_id">
            {% for pupil in pupils %}
                <option value="{{ pupil.id }}">
                    {{ pupil.name }}
                </option>
            {% endfor %}
        </select><br/>

        <input type="submit" value="Powiąż">
    </form>

{% endblock %}
