{% extends "CodersLabBundle:Default:index.html.twig" %}

{% block title %}pokaż artykuł{% endblock %}

{% block controller_name %} {{ _self.getTemplateName() }} {% endblock %}

{% block body %}
    {# Artykuł o ID {{ n }}: <br/><br/> #}

    {% if article %}
        <strong>Tytuł:</strong><br/>
        {{ article.title }}

        <br/><br/>

        <strong>Treść:</strong><br/>
        {{ article.articleText }} <br/><br/>
    {% else %}
        Nie ma artykułu o podanym ID.
    {% endif %}

    <hr/>
{% endblock %}